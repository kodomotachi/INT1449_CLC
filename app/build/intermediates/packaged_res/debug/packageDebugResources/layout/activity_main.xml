<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="Weather background"/>

    <!-- Main ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="40dp"
            android:paddingBottom="20dp">

            <!-- Top Bar -->

            <!-- Location Permission -->

            <!-- Current Temperature -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvLocationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Binh Tan"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnAdd"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_toStartOf="@id/btnMenu"
                    android:background="@android:color/transparent"
                    android:contentDescription="Add location"
                    android:src="@drawable/ic_add" />

                <ImageButton
                    android:id="@+id/btnMenu"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:contentDescription="Menu"
                    android:src="@drawable/ic_menu" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvLocationPermission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:drawableEnd="@android:drawable/ic_menu_directions"
                android:drawablePadding="8dp"
                android:text="@string/allow_location_access"
                android:textColor="#CCFFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvCurrentTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28째"
                android:textSize="96sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-thin"
                android:layout_marginBottom="8dp"/>

            <!-- Weather Condition -->
            <TextView
                android:id="@+id/tvWeatherCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cloudy  30째/24째"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginBottom="120dp"/>

            <!-- 24-Hour Forecast Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/semi_transparent_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/twenty_four_hour_forecast"
                        android:textSize="16sp"
                        android:textColor="@color/text_gray"
                        android:layout_marginBottom="16dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvHourlyForecast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:listitem="@layout/item_hourly_forecast"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Weather Info Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignBounds"
                android:layout_marginBottom="16dp">

                <!-- UV Index Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/uv_index"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray"/>

                        <TextView
                            android:id="@+id/tvUvValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/moderate"
                            android:textSize="24sp"
                            android:textColor="@color/text_dark"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"/>

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_cloud"
                            android:contentDescription="UV icon"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Humidity Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/humidity"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray"/>

                        <TextView
                            android:id="@+id/tvHumidityValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="88%"
                            android:textSize="32sp"
                            android:textColor="@color/text_dark"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"/>

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_cloud"
                            android:contentDescription="Humidity icon"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Real Feel Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/real_feel"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray"/>

                        <TextView
                            android:id="@+id/tvRealFeelValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="28째"
                            android:textSize="32sp"
                            android:textColor="@color/text_dark"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"/>

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_cloud"
                            android:contentDescription="Real feel icon"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Wind Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/north"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray"/>

                        <TextView
                            android:id="@+id/tvWindValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Force 2"
                            android:textSize="24sp"
                            android:textColor="@color/text_dark"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"/>

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_cloud"
                            android:contentDescription="Wind icon"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Sunset Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sunset"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray"/>

                        <TextView
                            android:id="@+id/tvSunsetValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="17:28"
                            android:textSize="32sp"
                            android:textColor="@color/text_dark"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"/>

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_cloud"
                            android:contentDescription="Sunset icon"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Pressure Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pressure"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray"/>

                        <TextView
                            android:id="@+id/tvPressureValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1007"
                            android:textSize="32sp"
                            android:textColor="@color/text_dark"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hpa"
                            android:textSize="12sp"
                            android:textColor="@color/text_gray"/>

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_cloud"
                            android:contentDescription="Pressure icon"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>